{
    "name": "teddilab/common",
    "description": "Mise en commun de code pour les applications LMS",
    "require": {
        "php": "^7.1",
        "laravel/framework": "~5.5.0|~5.6.0|~5.7.0",
        "teddilab/authlib": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.3",
        "orchestra/testbench" : "~3.5.0|~3.6.0|~3.7.0",
        "mockery/mockery": "^1.0"
    },
    "repositories": [
        {
            "type": "path",
            "url": "../authlib"
        }
    ],
    "autoload": {
        "psr-4": {
            "Teddilab\\Common\\": "src"
        },
        "files": [
            "src/Helpers/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Teddilab\\Common\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Teddilab\\Common\\TeddilabCommonServiceProvider"
            ]
        }
    },
    "authors": [
        {
            "name": "guillaume-cozic",
            "email": "guillaume.cozic@gmail.com"
        }
    ]
}
